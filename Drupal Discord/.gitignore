# Ignore directories generated by Composer
/vendor/
web/core/
web/modules/contrib/
web/themes/contrib/
web/profiles/contrib/
web/libraries/

# Ignore Drupal's file directory
web/sites/*/files/
web/sites/*/private/

# Ignore SimpleTest multi-site environment
web/sites/simpletest

# Ignore files generated by PhpStorm
.idea/

# Ignore .env files (chứa thông tin nhạy cảm)
.env
.env.local
.env.*.local

# Ignore database backups
*.sql
*.sql.gz
drupal_backup.sql

# Ignore temporary files
*.tmp
*.temp
*.swp
*.swo
*~

# Ignore OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Ignore log files
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore Drupal settings files (có thể chứa thông tin database)
web/sites/*/settings.local.php
web/sites/*/services.local.yml

# Ignore backup and cache files
*.bak
*.cache
web/sites/*/cache/

# Ignore text and markdown files
*.txt
*.md

# Keep important files
!.gitkeep
!.htaccess
!web/.htaccess
!web/sites/default/default.settings.php
